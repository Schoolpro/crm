<div class="org-layout">
  <!-- ðŸ§© Columna izquierda: Detalles de la empresa -->
  <section class="org-left">
    <h1><%= organization.name %></h1>

    <p><strong>Phone:</strong> <%= organization.phone %></p>
    <p><strong>Website:</strong>
      <% if (organization.website) { %>
        <a href="<%= organization.website %>" target="_blank"><%= organization.website %></a>
      <% } else { %>
        <span class="text-muted">N/A</span>
      <% } %>
    </p>
    <p><strong>Email:</strong> <%= organization.email || 'N/A' %></p>
    <p><strong>Industry:</strong> <%= organization.industry || 'N/A' %></p>
    <p><strong>Address:</strong>
      <%= organization.address %>, <%= organization.city %>, <%= organization.state %>, <%= organization.zip_code %>, <%= organization.country %>
    </p>

    <h2>Contact Information</h2>
    <p><strong>Contact Name:</strong> <%= organization.contact_name || 'N/A' %></p>
    <p><strong>Contact Title:</strong> <%= organization.contact_title || 'N/A' %></p>
    <p><strong>Contact Phone:</strong> <%= organization.contact_phone || 'N/A' %></p>
    <p><strong>Contact Email:</strong> <%= organization.contact_email || 'N/A' %></p>

    <h2>Company Details</h2>
    <p><strong>Status:</strong> <%= organization.status || 'N/A' %></p>
    <p><strong>Employees:</strong> <%= organization.employees || 'N/A' %></p>
    <p><strong>Revenue:</strong> <%= organization.revenue || 'N/A' %></p>
    <p><strong>Category:</strong> <%= organization.category || 'N/A' %></p>
    <p><strong>Source:</strong> <%= organization.source || 'N/A' %></p>
    <p><strong>Rating:</strong> <%= organization.rating || 'N/A' %></p>
    <p><strong>Priority Level:</strong> <%= organization.priority_level || 'N/A' %></p>

    <h2>Social Media</h2>
    <ul>
      <% if (organization.linkedin_url) { %>
        <li><a href="<%= organization.linkedin_url %>" target="_blank">LinkedIn</a></li>
      <% } %>
      <% if (organization.facebook_url) { %>
        <li><a href="<%= organization.facebook_url %>" target="_blank">Facebook</a></li>
      <% } %>
      <% if (organization.twitter_url) { %>
        <li><a href="<%= organization.twitter_url %>" target="_blank">Twitter/X</a></li>
      <% } %>
      <% if (organization.instagram_url) { %>
        <li><a href="<%= organization.instagram_url %>" target="_blank">Instagram</a></li>
      <% } %>
    </ul>
  </section>

  <!-- ðŸ“„ Columna derecha: Perfil descriptivo de la empresa -->
