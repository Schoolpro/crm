<%- include('partials/head') %>
<%- include('partials/header') %>

<div class="org-layout">
  <!-- Columna izquierda -->
  <section class="org-left">
    <h1><%= organization.name %></h1>
    <p><strong>Phone:</strong> <%= organization.phone %></p>
    <p><strong>Website:</strong> <a href="<%= organization.website %>" target="_blank"><%= organization.website %></a></p>
    <p><strong>Email:</strong> <%= organization.email %></p>
    <p><strong>Industry:</strong> <%= organization.industry %></p>
    <p><strong>Address:</strong> <%= organization.address %>, <%= organization.city %>, <%= organization.state %>, <%= organization.zip_code %>, <%= organization.country %></p>

    <h2>Contact Information</h2>
    <p><strong>Contact Name:</strong> <%= organization.contact_name %></p>
    <p><strong>Contact Title:</strong> <%= organization.contact_title %></p>
    <p><strong>Contact Phone:</strong> <%= organization.contact_phone %></p>
    <p><strong>Contact Email:</strong> <%= organization.contact_email %></p>

    <h2>Company Details</h2>
    <p><strong>Status:</strong> <%= organization.status %></p>
    <p><strong>Employees:</strong> <%= organization.employees %></p>
    <p><strong>Revenue:</strong> <%= organization.revenue %></p>
    <p><strong>Category:</strong> <%= organization.category %></p>
    <p><strong>Source:</strong> <%= organization.source %></p>
    <p><strong>Rating:</strong> <%= organization.rating %></p>
    <p><strong>Priority Level:</strong> <%= organization.priority_level %></p>

    <h2>Social Media</h2>
    <ul>
      <% if (organization.linkedin_url) { %>
        <li><a href="<%= organization.linkedin_url %>" target="_blank">LinkedIn</a></li>
      <% } %>
      <% if (organization.facebook_url) { %>
        <li><a href="<%= organization.facebook_url %>" target="_blank">Facebook</a></li>
      <% } %>
      <% if (organization.twitter_url) { %>
        <li><a href="<%= organization.twitter_url %>" target="_blank">Twitter/X</a></li>
      <% } %>
      <% if (organization.instagram_url) { %>
        <li><a href="<%= organization.instagram_url %>" target="_blank">Instagram</a></li>
      <% } %>
    </ul>
  </section>

  <!-- Panel derecho como Prompt Input -->
  <aside class="org-profile-panel">
    <h2>ðŸ“„ Perfil de la Empresa</h2>
    <div class="org-profile-box">
      <p><%= organization.profile %></p>
    </div>
  </aside>
</div>

<%- include('partials/footer') %>
